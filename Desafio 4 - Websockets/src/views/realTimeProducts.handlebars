<div class="saludo">
  <p>Lista de productos desde websocket agregados hasta el momento:</p>
  {{#if products}}
    <div class="products">
      {{#each products}}
        <div>
          <h2>{{this.title}}</h2>
          <p>{{this.description}}</p>
          <h4>${{this.price}}</h4>
          <h5>Stock disponible: {{this.stock}}</h5>
        </div>
      {{/each}}
    </div>
  {{else}}
    <h3>No existen productos...</h3>
  {{/if}}
</div>

<form>
  <h2>Agregar un nuevo producto</h2>
  <input id="title" type="text" placeholder="Titulo del producto" />
  <input id="description" type="text" placeholder="Descripción del producto" />
  <input id="price" type="number" placeholder="Precio" />
  <input id="code" type="text" placeholder="Código del producto" />
  <input id="stock" type="number" placeholder="Stock" />
  <input id="category" type="text" placeholder="Categoria" />
  <button id="addBtn" type="submit"> Agregar producto </button>
</form>


<form>
  <h2>Eliminar producto</h2>
  <input
    id="deleteID"
    type="number"
    placeholder="Por favor ingresa el ID del producto que deseas eliminar"
  />
  <button id="deleteBtn" type="submit"> Eliminar producto </button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>